---
import '../styles/global.css' 
import Header from "../components/layouts/Header.astro"
import Footer from "../components/layouts/Footer.astro"

---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/ConstrutoraSantana/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Construtora Santana</title>
	</head>
	<body class="bg-background text-gray-900 antialiased">
	    <Header />
		
		<main class="max-w-7xl mx-auto px-4 pt-24">
			<slot />
		</main>
		
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
