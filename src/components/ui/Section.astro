---
const { title, subtitle } = Astro.props;
---

<section class="py-20">
    <div class="max-w-7xl mx-auto px-4">
        {title && (
          <h2 class="text-3xl font-semibold tracking-tight">
              {title}
          </h2>
        )}
        {subtitle && (
          <p class="mt-3 text-gray-600 max-w-2xl">
              {subtitle}
          </p>
        )}
        
        <div class="mt-12">
            <slot />
        </div>
    </div>
</section>