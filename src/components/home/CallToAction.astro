---
import { Icon } from "astro-icon/components";

const contactMethods = [
    {
        label: "Ubicacion",
        icon: "mdi:map-marker",
        entries: [
            { type: "text", value: "Bávaro, Punta Cana" },
            { type: "text", value: "República Dominicana" },
        ],
    },
    {
        label: "Teléfono",
        icon: "mdi:phone",
        entries: [
            { type: "tel", value: "+1 829 986 3012" },
            { type: "tel", value: "+1 809 519 0756" },
        ],
    },
    {
        label: "Email",
        icon: "mdi:email",
        entries: [
            { type: "email", value: "admin@constructorasantanadiaz.com" },
            { type: "email", value: "ingmanuelsantana@yahoo.es" },
        ],
    },
];

const socials = [
    { href: "#", color: "hover:bg-green-600", icon: "mdi:whatsapp" },
];
---

<section>
    <div class="container mx-auto px-6">
        <div class="space-y-8 text-center">
            <div
                class="inline-flex items-center gap-2 bg-primary/20 px-4 py-2 rounded-full text-sm font-semibold uppercase tracking-wide mb-6"
            >
                <Icon name="mdi:message-outline" class="w-4 h-4" />
                <span>Contacto</span>
            </div>

            <div class="text-center mb-12">
                <h2 class="text-3xl font-semibold tracking-tight">
                    Ponte en contacto con nosotros
                </h2>
                <p class="text-gray-600 mt-4 max-w-xl mx-auto">
                    Siempre abierto a colaborar en proyectos creativos, nuevas
                    ideas o simplemente charlar.
                </p>
            </div>

            <!-- Contact Methods -->
            <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
                {
                    contactMethods.map((contactMethod) => (
                        <div class="bg-amber-50 border border-amber-100 rounded-2xl p-6 shadow-sm hover:shadow-md hover:scale-105 transition-all">
                            <div class="flex items-center gap-4">
                                <div class="w-12 h-12 flex items-center justify-center rounded-2xl bg-primary/20 text-gray-600">
                                    {contactMethod.icon && (
                                        <Icon
                                            name={contactMethod.icon}
                                            class="w-6 h-6"
                                        />
                                    )}
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-600">
                                        {contactMethod.label}
                                    </p>
                                    <div class="space-y-1">
                                        {contactMethod.entries.map((entry) => {
                                            if (entry.type === "tel") {
                                                return (
                                                    <a
                                                        href={`tel:${entry.value.replace(/\s/g, "")}`}
                                                        class="text-gray-600 text-base leading-snug hover:text-primary transition-colors block"
                                                    >
                                                        {entry.value}
                                                    </a>
                                                );
                                            } else if (entry.type === "email") {
                                                return (
                                                    <a
                                                        href={`mailto:${entry.value}`}
                                                        class="text-gray-600 text-base leading-snug hover:text-primary transition-colors block"
                                                    >
                                                        {entry.value}
                                                    </a>
                                                );
                                            } else {
                                                // type === "text" for location
                                                return (
                                                    <p class="text-gray-600 text-base leading-snug">
                                                        {entry.value}
                                                    </p>
                                                );
                                            }
                                        })}
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
