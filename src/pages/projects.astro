---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import Button from "../components/ui/Button.astro";

const projects: CollectionEntry<"projects">[] = await getCollection("projects");

const filteredProjects = projects
  .filter(projects => projects.data.type !== "test")
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout>
    <!-- Hero -->
    <section class="bg-primary/10 rounded-3xl">
        <div class="max-w-7xl mx-auto px-6 py-16 text-center">
            <h2 class="text-4xl font-semibold text-on-surface">
                Nuestros Proyectos
            </h2>
            <p class="mt-4 text-lg text-on-surface-variant max-w-2xl mx-auto">
                Explorá nuestra colección de proyectos arquitectónicos que reflejan la identidad caribeña
            </p>
        </div>
    </section>
    
    <!-- Projects Grid -->
    <section class="max-w-7xl mx-auto px-6 py-20">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {filteredProjects.map(project => (
                <a 
                  href={`/ConstrutoraSantana/project/${project.id}`}
                  class="group block rounded-3xl
                        bg-surface border border-outline/30
                        overflow-hidden
                        shadow-sm
                        transition-[box-shadow,background-color]
                        hover:shadow-md hover:bg-surface-variant
                        focus-visible:outline-none
                        focus-visible:ring-2 focus-visible:ring-primary/40"
                  aria-label={`Proyecto: ${project.data.title}, Categoria: ${project.data.type}`}
                  tabindex="0"
                  data-astro-prefetch
                >
                    <div class="relative aspect-video overflow-hidden">
                        <img
                          transition:name={`project-image-${project.id}`}
                          src={project.data.img.cover}
                          alt={project.data.title}
                          class=" w-full h-full object-cover
                             transition-transform duration-500
                             group-hover:scale-[1.03]"
                          loading="lazy"
                        />
                        
                        <div class="absolute inset-0 bg-gradient-to-br from-primary/40 to-secondary/30 flex items-center justify-center opacity-0 transition-opacity duration-300 ease-out group-hover:opacity-100">
                            <span
                              class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl bg-surface/90 backdrop-blur text-primary text-sm font-medium shadow-sm"
                              aria-label={`Ver detalles del proyecto ${project.data.title}`}
                            >
                                <Icon name="mdi:eye-outline" class="w-4 h-4" />
                                Ver Proyecto
                            </span>
                        </div>
                    </div>
                    
                    <div class="p-6 space-y-4">
                        <div class="flex items-center gap-3 text-xs">
                            <span class="px-3 py-1 rounded-full bg-secondary-container text-on-secondary-container font-medium" transition:name={`project-type=${project.id}`}>
                                {project.data.type}
                            </span>
                            <span class="text-on-surface-variant">
                                {project.data.date}
                            </span>
                        </div>
                        
                        <h3
                            class="text-lg font-semibold text-on-surface"
                            transition:name={`project-title-${project.id}`}
                        >
                            {project.data.title}
                        </h3>
                        
                        <p class="text-sm text-on-surface-variant line-clamp-2">
                            {project.data.description}
                        </p>
                        
                        <div class="flex items-center gap-2 text-sm text-on-surface-variant">
                            <div class="flex items-center">
                                <Icon name="mdi:map-marker" class="w-4 h-4" />
                                {project.data.location}
                            </div>
                        </div>
                        
                        <div class="flex flex-wrap gap-2 mt-4">
                          {project.data.tags.map((tag: string) => (
                            <span
                              class="
                                px-3 py-1 rounded-full text-xs font-medium
                                bg-surface-variant text-on-surface-variant
                                border border-outline/30
                              "
                            >
                              {tag}
                            </span>
                          ))}
                        </div>
                        
                        <div class="flex py-4">
                            <Button variant="tonal">
                                Ver Proyecto
                            </Button>
                        </div>
                    </div>
                </a>
            ))}
        </div>
        
        
        {filteredProjects.length === 0 && (
            <div class="text-center py-16">
                <div class="max-auto w-24 h-24 bg-primary/20 rounded-full flex items-center justify-center mb-4">
                    <svg class="w-12 h-12 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                </div>
                <h3 class="text-lg font-medium text-gray-600 mb-2">
                    No hay proyectos disponibles
                </h3>
                <p class="text-gray-600">
                    Los proyectos aparecerán aquí una vez que sean publicados.
                </p>
            </div>
        )}
    </section>
</Layout>