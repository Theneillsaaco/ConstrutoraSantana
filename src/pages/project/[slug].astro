---
import { getCollection, render, type CollectionEntry } from 'astro:content';
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import Button from "../../components/ui/Button.astro";

export async function getStaticPaths() {
  const projects: CollectionEntry<"projects">[] = await getCollection("projects");

  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project }
  }));
};

const { project } = Astro.props;
const { Content } = await render(project);
---

<Layout>
    <!-- TODO: Arreglar los estilos -->
    <section class="relative h-[65vh] overflow-hidden rounded-3xl shadow-md">
      <!-- Background image -->
      <img 
        transition:name={`project-${project.id}`}
        src={project.data.img.cover}
        alt={project.data.title}
        class="absolute inset-0 w-full h-full object-cover"
      />
    
      <!-- MD3 scrim -->
      <div class="absolute inset-0 bg-gradient-to-b from-surface/40 via-surface/15 to-transparent" />
    
      <!-- Content -->
      <div class="relative h-full flex items-end">
        <div class="max-w-7xl mx-auto px-6 pb-12 w-full space-y-4">

            <!-- Type chip -->
            <span
              class="inline-flex items-center
                     px-4 py-1.5 rounded-full
                     text-sm font-medium
                     bg-secondary-container text-on-secondary-container"
            >
              {project.data.type}
            </span>
    
            <!-- Title -->
            <h1 class="text-3xl lg:text-4xl font-semibold tracking-tight text-on-surface">
              {project.data.title}
            </h1>
    
            <!-- Description -->
            <p class="max-w-3xl text-base lg:text-lg text-on-surface-variant leading-relaxed">
              {project.data.description}
            </p>
        </div>
    
        <!-- Back FAB -->
        <div class="absolute top-6 left-6">
          <Button
            variant="tonal"
            href="/ConstrutoraSantana/projects"
            data-astro-prefetch
          >
            ← Volver
          </Button>
        </div>
      </div>
    </section>

    
    <!-- Detalles -->
    <section class="max-w-7xl mx-auto px-6 pt-20">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-12">
            <!-- Contenido -->
            <div class="lg:col-span-3 space-y-16">
                <article class="bg-surface rounded-3xl p-8 lg:p-10 shadow-sm prose prose-lg max-w-none prose-headings:font-semibold prose-headings:text-on-surface prose-p:text-on-surface-variant prose-a:text-primary">
                    <Content />
                </article>

                <!-- Galeria -->
                {project.data.img.others && (
                    <section>
                        <h3 class="text-xl font-semibold text-on-surface mb-6">
                            Galería
                        </h3>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            {project.data.img.others.map((img, index) => (
                                <div class="group relative overflow-hidden rounded-3xl bg-surface shadow-sm transition-shadow hover:shadow-md">
                                    <img 
                                        src={img} 
                                        alt={`${project.data.title} - Imagen ${index + 1}`}  
                                        class="w-full h-64 object-cover transition-transform duration-500 ease-out group-hover:scale-[1.03]"
                                    />
                                </div>
                            ))}
                        </div>
                    </section>
                )}
            </div>
            
            <aside class="lg:col-span-1 space-y-8">
                <!-- Info -->
                <div class="bg-surface-variant rounded-3xl p-6 shadow-sm space-y-6">
                    <h3 class="text-base font-semibold text-on-surface">
                        Información
                    </h3>
                
                    <dl class="space-y-5 text-sm">
                        <div class="flex gap-3">
                            <Icon name="mdi:map-marker-outline" class="w-5 h-5 text-primary" />
                            <div>
                                <dt class="text-on-surface-variant">
                                    Ubicación
                                </dt>
                                <dd class="text-on-surface font-medium">
                                    {project.data.location}
                                </dd>
                            </div>
                        </div>
                        
                        <div class="flex gap-3">
                            <Icon name="mdi:tag-outline" class="w-5 h-5 text-primary" />
                            <div>
                                <dt class="text-on-surface-variant">
                                    Tipo
                                </dt>
                                <dd class="capitalize text-on-surface">
                                    {project.data.type}
                                </dd>
                            </div>
                        </div>
                        
                        <div class="flex gap-3">
                            <Icon name="mdi:calendar-outline" class="w-5 h-5 text-primary" />
                            <div>
                                <dt class="text-on-surface-variant">
                                    Año
                                </dt>
                                <dd class="text-on-surface">
                                    {project.data.date}
                                </dd>
                            </div>
                        </div>
                    </dl>
                </div>
                
                <!-- Tags -->
                <div>
                    <h3 class="text-base font-semibold text-on-surface mb-4">
                        Etiquetas
                    </h3>
                
                    <div class="flex flex-wrap gap-2">
                        {project.data.tags.map(tag => (
                            <span 
                                class="px-4 py-1.5 rounded-full text-sm 
                                    bg-secondary-container 
                                    text-on-secondary-container 
                                "
                            >
                                {tag}
                            </span>
                        ))}
                    </div>
                </div>
                
                <!-- CTA -->
                <div class="bg-secondary-container/50 rounded-3xl p-6 shadow-sm">
                    <h3 class="text-base font-semibold text-on-secondary-container mb-2">
                        ¿Te interesa este proyecto?
                    </h3>
                    
                    <p class="text-sm text-on-secondary-container/80 mb-4">
                        Contáctanos para conocer más detalles.
                    </p>
                    
                    <Button 
                        variant="filled" 
                        href="/ConstrutoraSantana/#contacto"
                        data-astro-prefetch
                    >
                        Contactar
                    </Button>
                </div>
            </aside>
        </div>
    </section>
</Layout>
